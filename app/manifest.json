{
  "name": "TrumpToBlank",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Finds every mention of the word Trump and change it to a word of your choice.",
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Trump to blank",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contentSettings",
    "cookies",
    "storage"
  ],
  "content_scripts": [{ 
    "matches": ["*://*/*"],
    "js": ["scripts/content_script.js"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  }
}
